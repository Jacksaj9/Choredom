<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Choredom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChoredomUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <!--<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">-->
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: purple; font-family:georgia;">
            <div class="container-fluid" >
                <a class="navbar-brand" style="color:white" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="color:white">-->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!--<ul class="navbar-nav flex-grow-1">-->
                    <ul class="navbar-nav">
                        <li class="nav-item" >
                            <a class="nav-link" style="color:white; font-family:Georgia;" asp-area="" asp-page="/Calendar">Calendar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:white; font-family:Georgia;" asp-area="" asp-page="/Chores/ChoreList">Chore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:white; font-family:Georgia;" asp-area="" asp-page="/People/PeopleList">People</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="background-color: purple; font-family:georgia; color:white;">
        <div class="container">
            &copy; 2023 - ChoredomUI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>