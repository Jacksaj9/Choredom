@page
@model ChoredomUI.Pages.People.PeopleListModel
@{
}

<div class="container">
    <div class="row">
        <h1>People List</h1>
    </div>
    <div class="col-sm-9">
        <a asp-page="AddPeople" class="btn btn-success">
            <i class="bi bi-person-add mx-2"></i>Add Person
        </a>
    </div>
</div>

<ul class="list-group list-group-flush">
    @foreach (var person in Model.PeopleList)
    {
        <li class="list-group-item">@person.FirstName @person.LastName</li>
      
    }
</ul>
<ul class="list-group list-group-flush">
    @foreach (var person in Model.PeopleList)
    {
        <li class="list-group-item">@person.PersonBio</li>
    }
</ul>