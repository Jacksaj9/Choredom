@page
@model ChoredomUI.Pages.People.PeopleListModel
@{
}

<div class="container">
    <div class="row">
        <h1>People List</h1>
    </div>
    <div class="col-sm-9">
        <a class="btn btn-success" asp-page="AddPeople">Add Person</a>
    </div>
</div>

<ul class="list-group list-group-flush">
    @foreach (var person in Model.PeopleList)
    {
        <li class="list-group-item">@person.PersonFirstName</li>
        <li class="list-group-item">@person.PersonLastName</li>
    }
</ul>