@page
@model ChoredomUI.Pages.Chores.ChoreListModel
@{
}




<div class="container">
    <div class="row">
        <h1>Chore List</h1>
    </div>
    <div class="col-sm-9">
        <a class="btn btn-success" asp-page="AddChore">Add Chore</a>
    </div>
</div>

<ul class="list-group list-group-flush">
@foreach (var chore in Model.ChoreList){
        <li class="list-group-item">@chore.ChoreName</li>
}
</ul>
