@page
@model ChoredomUI.Pages.Chores.ChoreListModel
@{
    if (HttpContext.User.Identity != null)
    {
        Layout = HttpContext.User.Identity.IsAuthenticated ? "_AuthenticatedLayout" : "_Layout";
    }
}

<div class="container">
    <div class="row">
        <h1>Chore List</h1>
    </div>
    <div class="col-sm-9">
        <a asp-page="AddChore" class="btn btn-success">
            <i class="bi bi-clipboard-plus mx-2"></i>Add Chore
        </a>
    </div>
</div>

<div class="row">
    @foreach (var chore in Model.ChoreList)
    {
        <div class="row">
<div class="col-4">
        <li class="checkbox" type="checkbox">
            @chore.ChoreName
        </li>
        </div>
        <div class="col-6">
            <form method="post">
                <a asp-page="EditChore" asp-route-id="@chore.ChoreId" class="btn btn-success" style="float: right;">
                    <i class="bi bi-pencil mx-2"></i>Edit Chore
                    </a>
                    </form>
            </div>
             <div class="col-2">
                <form method="post">
                <button type="submit" class="btn btn-danger" asp-route-id="@chore.ChoreId" style="float: right;" onclick="return confirm('Are you sure you want to delete this chore? This action cannot be undone');"><i class="bi bi-trash3 mx-2"></i>Delete Chore</button>
            </form>
        </div>
        </div>
        <br />

    }
</div>

